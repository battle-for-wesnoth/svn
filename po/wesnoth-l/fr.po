#: data/campaigns/Liberty/scenarios/01_The_Raid.cfg:325
msgid "Remald"
msgstr "Remald"

#. [event]
#: data/campaigns/Liberty/scenarios/01_The_Raid.cfg:326
msgid "Wolmas"
msgstr "Wolmas"

#. [event]
