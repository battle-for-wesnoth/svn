msgid "Crossroads"
msgstr "Die Kreuzung"

#: data/campaigns/Heir_To_The_Throne/scenarios/07_Crossroads.cfg:16
msgid "Defeat Kojun Herolm"
msgstr "Besiegt Kojun Herolm"

